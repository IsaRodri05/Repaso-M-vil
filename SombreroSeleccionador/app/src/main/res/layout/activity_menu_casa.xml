<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuFondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".MenuCasa">

    <TextView
        android:id="@+id/tituloMenu"
        android:text="Menu"
        android:textSize="50sp"
        android:fontFamily="@font/harryp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mimebrosCasa"
        android:layout_marginBottom="75dp"/>

    <ImageView
        android:id="@+id/imagenMiembrosCasa"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/contactos"
        android:layout_marginBottom="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"/>
    <TextView
        android:id="@+id/mimebrosCasa"
        android:text="Miembros casa"
        android:textSize="40sp"
        android:fontFamily="@font/harryp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/contactos"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"/>

    <ImageView
        android:id="@+id/imagenContactos"
        android:src="@drawable/iconocontactos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/contactos"
        android:text="Contactos"
        android:textSize="40sp"
        android:fontFamily="@font/harryp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"/>

    <ImageView
        android:id="@+id/imagenCamara"
        android:src="@drawable/camara"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/imagenContactos"
        android:layout_marginStart="60dp"
        />

    <TextView
        android:id="@+id/camara"
        android:text="Camara"
        android:textSize="40sp"
        android:fontFamily="@font/harryp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/contactos"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90dp"/>

</RelativeLayout>